<!DOCTYPE html>
<html>
<head>
  <title>Suma de n√∫meros inferiores</title>
</head>
<body>
  <script>
//dada las 3 notas de un alumno, visualizar si su media esta aprobada o suspensa
let tab_notas=["Manuel",5,6,7];
    function Media(tab) {
        let acumulador=0;
        for(i=1;i<tab.length;i++){
            acumulador+=tab[i];
        }
      let media = acumulador/(tab.length -1);
      return media;
    }

    function Visualizar(valor, media) {
        document.write(valor+":");
        if(media>=5){
      document.write(" aprobado "+media);
        }
        else{
            document.write(" suspenso "+media);
        }
    }

    let resultado = Media(tab_notas);
    Visualizar(tab_notas[0],resultado);

  </script>
</body>
</html>
