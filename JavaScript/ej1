<!DOCTYPE html>
<html>
<head>
  <title>Suma de números inferiores</title>
</head>
<body>
  <script>
    //1º dado un numero obtener la suma de los inferiores a el hasta el 1
    function sumaInferiores(n) {
      let suma = 0;
      for (let i = 1; i < n; i++) {
        suma += i;
      }
      return suma;
    }

    let numero = 5; // Puedes cambiar este valor
    let resultado = sumaInferiores(numero);

    document.write("La suma de los números inferiores a " + numero + " es: " + resultado);
  </script>
</body>
</html>
